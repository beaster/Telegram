    android:layout_width="236.66dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/SpeakTo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="bottom"
